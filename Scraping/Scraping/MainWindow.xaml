<Window x:Class="Scraping.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Scraping"
        mc:Ignorable="d"
        Title="百合漫画　発売日" Height="500" Width="900">
    <ScrollViewer>
        <StackPanel>
            <TextBlock x:Name="textBlock" Text="一覧" FontSize="20" Margin="10,10" FontWeight="Bold" HorizontalAlignment="Left"/>
            <Button x:Name="myBookButton" Content="MyBookを表示" Margin="10,0,0,10" Width="100" HorizontalAlignment="Left"/>
            <DataGrid x:Name="dataGrid" ScrollViewer.VerticalScrollBarVisibility="Disabled" SelectionUnit="Cell" PreviewMouseWheel="DataGrid_PreviewMouseWheel" SelectedCellsChanged="dataGrid_SelectedCellsChanged"/>
        </StackPanel>
    </ScrollViewer>
</Window>
