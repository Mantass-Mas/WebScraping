        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Scraping.View"
        mc:Ignorable="d"
        Title="エラー" Height="250" Width="300" WindowStyle="ToolWindow">
    <Grid>
        <TextBlock x:Name="Error_Text" Text="" VerticalAlignment="Top" Margin="30,70" TextAlignment="Center" Height="80" TextWrapping="Wrap"/>
